<script>

    $(function () {

        function myupload() {

            //alert($("#demo-fileInput-4").val());
            if ($("#demo-fileInput-4").val() == "" || $("#demo-fileInput-4").val() == null)
            {
                alert("照片不能为空！");
                return;
            }

        }
         
        //保存
        $("#savebtn").click(function () {

         
           // alert($("#Path").val());

            if ($("#name").val() == null || $("#name").val() == "") {
                alert("请填写姓名！");

                return;
            }
            else if ($("#sex").val() == null || $("#sex").val() == "") {
                alert("请填写性别！");

                return;
            }
            else if ($("#native").val() == null || $("#native").val() == "") {
                alert("请填写籍贯！");

                return;
            }
            else if ($("#Path").val() == null || $("#Path").val() == "") {
                alert("请上传照片！");

                return;
            }
            //else if ($("#birthday").val() == null || $("#birthday").val() == "") {
            //    alert("请填写生日！");

            //    return;
