    ViewBag.Title = "AddIndustryChange";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
 
<div class="row">
    <div class="col-md-12">
        <!--breadcrumbs start -->
        <ul class="breadcrumb panel">
