@{
    ViewBag.Title = "AddLetterChk";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <!--breadcrumbs start -->
        <ul class="breadcrumb panel">
            <li><a href="/EnterFile/Index"><i class="fa fa-home"></i>首页</a></li>
            <li class="active">科级干部信访核查情况登记表</li>
        </ul>
        <!--breadcrumbs end -->
    </div>
</div>
<div class="row">

    <div class="col-sm-12">
        <section class="panel">
            <header class="panel-heading">
                【@Session["realname"]】信访核查情况登记表
            </header>

            <div class="panel-body">
                <div class="alert alert-block alert-danger fade in">
                    <button type="button" class="close close-sm" data-dismiss="alert"><i class="fa fa-times"></i></button>
                    <strong>说明：</strong><p>1、此表格只登记经过调查核实的信访情况。</p>
                    <p>
                        2、表中“信访登记号”为信访受理单位或部门的信访件登记号。
                    </p>
                </div>
                <form class="form-horizontal" role="form" action="/EnterFile/_AddLetterChk" method="post">
                    <div class="form-group">
                        <label for="input1" class="col-lg-3 col-sm-2 control-label">信访登记号</label>
                        <div class="col-lg-4">
                            <input type="" class="form-control" id="input1" placeholder="" name="num">
                            <!--<p class="help-block">Example block-level help text here.</p>-->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="input1" class="col-lg-3 col-sm-2 control-label">信访时间</label>
                        <div class="col-lg-4">
                            <input type="" class="form-control laydate-icon" id="time" placeholder="" name="time">
                            <!--<p class="help-block">Example block-level help text here.</p>-->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="input1" class="col-lg-3 col-sm-2 control-label">信息来源单位</label>
                        <div class="col-lg-4">
                            <input type="" class="form-control" id="input1" placeholder="" name="comeunit">
                            <!--<p class="help-block">Example block-level help text here.</p>-->
                        </div>
                    </div>
                    <hr>
                    <h5 style="background: #eff2f7; font-weight: bold; color: #65cea7; line-height: 30px; padding-left: 20px; border-radius: 4px;">被反映人</h5>
                    <div class="form-group">
                        <label for="input1" class="col-lg-3 col-sm-2 control-label">姓名</label>
                        <div class="col-lg-4">
                            <input type="" class="form-control" id="input1" placeholder="" name="bename">
                            <!--<p class="help-block">Example block-level help text here.</p>-->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="input1" class="col-lg-3 col-sm-2 control-label">职务</label>
                        <div class="col-lg-4">
                            <input type="" class="form-control" id="input1" placeholder="" name="bepost">
                            <!--<p class="help-block">Example block-level help text here.</p>-->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="input1" class="col-lg-3 col-sm-2 control-label">单位</label>
                        <div class="col-lg-4">
                            <input type="" class="form-control" id="input1" placeholder="" name="beunit">
                            <!--<p class="help-block">Example block-level help text here.</p>-->
                        </div>
                    </div>
                    <hr>
                    <h5 style="background: #eff2f7; font-weight: bold; color: #65cea7; line-height: 30px; padding-left: 20px; border-radius: 4px;">反映人</h5>
                    <div class="form-group">
                        <label for="input1" class="col-lg-3 col-sm-2 control-label">姓名</label>
                        <div class="col-lg-4">
                            <input type="" class="form-control" id="input1" placeholder="" name="name">
                            <!--<p class="help-block">Example block-level help text here.</p>-->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="input1" class="col-lg-3 col-sm-2 control-label">联系方式</label>
                        <div class="col-lg-4">
                            <input type="" class="form-control" id="input1" placeholder="" name="tel">
                            <!--<p class="help-block">Example block-level help text here.</p>-->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="input1" class="col-lg-3 col-sm-2 control-label">单位</label>
                        <div class="col-lg-4">
                            <input type="" class="form-control" id="input1" placeholder="" name="unit">
                            <!--<p class="help-block">Example block-level help text here.</p>-->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="input1" class="col-lg-3 col-sm-2 control-label">职务</label>
                        <div class="col-lg-4">
                            <input type="" class="form-control" id="input1" placeholder="" name="post">
                            <!--<p class="help-block">Example block-level help text here.</p>-->
                        </div>
                    </div>
                    <hr>
                    <div class="form-group">
                        <label for="input1" class="col-lg-3 col-sm-2 control-label">信访反映内容</label>
                        <div class="col-lg-4">
                            <textarea rows="6" class="form-control" name="content"></textarea>
                            <!--<p class="help-block">Example block-level help text here.</p>-->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="input1" class="col-lg-3 col-sm-2 control-label">调查情况及结论</label>
                        <div class="col-lg-4">
                            <textarea rows="6" class="form-control" name="checkresult"></textarea>
                            <!--<p class="help-block">Example block-level help text here.</p>-->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="input1" class="col-lg-3 col-sm-2 control-label">处理结果</label>
                        <div class="col-lg-4">
                            <textarea rows="6" class="form-control" name="handleresult"></textarea>
                            <!--<p class="help-block">Example block-level help text here.</p>-->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="input1" class="col-lg-3 col-sm-2 control-label">备注</label>
                        <div class="col-lg-4">
                            <textarea rows="6" class="form-control" name="remark"></textarea>
                            <!--<p class="help-block">Example block-level help text here.</p>-->
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-3 col-lg-10">
                            <button type="submit" class="btn btn-primary">保存</button>
                            <button class="btn btn-default" type="button" onclick="window.history.go(-1);">返回</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>

    </div>
</div>


<script src="~/Content/js/jquery-1.10.2.min.js"></script>

<script src="~/Content/myjs/datepicker/WdatePicker.js"></script>
<script src="~/Content/myjs/datepicker/calendar.js"></script>

<script src="~/Content/laydate/laydate.js"></script>

<script>

    $(function () {
 
        //保存
        $("#savebtn").click(function () {
             

            if ($("#name").val() == null || $("#name").val() == "") {
                alert("请填写姓名！");

                return;
            }
            else if ($("#sex").val() == null || $("#sex").val() == "") {
                alert("请填写性别！");

                return;
            }
            else if ($("#native").val() == null || $("#native").val() == "") {
                alert("请填写籍贯！");

                return;
            }
            else if ($("#Path").val() == null || $("#Path").val() == "") {
                alert("请上传照片！");

                return;
            }
                //else if ($("#birthday").val() == null || $("#birthday").val() == "") {
                //    alert("请填写生日！");

                //    return;
                //}

                //else if ($("#idcard").val() == null || $("#idcard").val() == "") {
                //    alert("请填写身份证号码！");

                //    return;
                //}
                //else if ($("#outlook").val() == null || $("#outlook").val() == "") {
                //    alert("请填写政治面貌！");

                //    return;
                //}
                //else if ($("#partytime").val() == null || $("#partytime").val() == "") {
                //    alert("请填写入党时间！");

                //    return;
                //}

            else {
                $.post("/EnterFile/_AddBaseInfo1", {

                    "u.RealName": $("#name").val(),
                    "u.Sex": $("#sex").val(),
                    "u.NativePlace": $("#native").val(),
                    "u.Photo": $("#Path").val(),
                    "u.Birthday": $("#birthday").val(),
                    "u.IdCardNum": $("#idcard").val(),
                    "u.Outlook": $("#outlook").val(),
                    "u.PartyTime": $("#partytime").val(),
                    "u.Nation": $("#nation").val(),
                    "u.Property": $("#property").val(),
                    "u.JobTime": $("#jobtime").val(),
                    "u.Education": $("#education").val(),
                    "u.WorkUnit": $("#workunit").val(),
                    "u.Post": $("#post").val(),
                    "u.PostStatus": $("#poststatus").val(),
                    "u.PostTime": $("#posttime").val(),
                    "u.DoWork": $("#dowork").val(),
                    "u.UserAddress": $("#address").val(),
                    "u.Introduction": $("#introduction").val()
                }, function (data) {

                    if (data == "1") {
                        alert("保存成功！");
                        location.href = "/EnterFile/Index";
                    }
                    else {
                        alert("保存失败,请重试！");
                        location.reload();//刷新
                    }
                });

            }


        });

    });




    laydate({
        elem: '#time',
        event: 'focus'
    });



</script>

