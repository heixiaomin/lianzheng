<script type="text/javascript">

    function Rleft() {
        if (document.getElementById("mm2").clientHeight > document.getElementById("mm1").clientHeight) {
            document.getElementById("mm1").style.height = document.getElementById("mm2").offsetHeight - 160 + "px";
        }
        else {
            document.getElementById("mm2").style.height = document.getElementById("mm1").offsetHeight - 160 + "px";
        }
    }
    $(document).ready(function () {
        $(".modal-body").niceScroll({ cursorcolor: "#cccccc" });
        //初始化高度  
        $(".modal-body").height($(window).height() - 200);
        //当文档窗口发生改变时 触发  
        $(window).resize(function () {
            $(".modal-body").height($(window).height() - 200);
        })
    })

</script>



