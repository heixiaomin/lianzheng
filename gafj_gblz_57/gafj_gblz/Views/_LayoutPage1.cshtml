<body class="sticky-header left-side-collapsed" onload="Rleft()">
    <div class="top">
        <div class="ny_logo">
            @{if (ViewBag.role == 0)
              {
               <a href="#"><span>杭州经济技术开发区管委会干部廉政档案系统</span></a>
              }
              else
              {
                   <a href="/Main/Index"><span>杭州经济技术开发区管委会干部廉政档案系统</span></a>
              }
              }
           

        </div>
        <div class="nav_right">
            <div class="hd_show">
                <span class="hd_pic">
                   @{if (ViewBag.img == null || ViewBag.img == "")
                     {
                           
                       <img src="~/Content/images/user.gif" style="width: 40px; height: 40px" />
                     }
                     else
                     {
                           <img src="~/Content/Upload/Images/@ViewBag.img" style="height:40px;width:40px"/> 
                     }
                        }
                </span>你好,@ViewBag.username
            </div>
            <div class="icon">
                <i class="i_link fa fa-cog"></i>
                <dl class="cd_list">
                    <dd><a href="/SystemManage/UpdatePwd"><i class="fa fa-caret-right"></i>修改密码</a></dd>
                </dl>
            </div>
            <div class="icon"><a href="/Home/LogOut"><i class="i_link fa fa-power-off"></i></a></div>
        </div>
    </div>
    <section>
        <div class="left-side sticky-left-side" id="mm2">

            <div class="left-side-inner">
                <!--sidebar nav start-->
                <ul class="nav nav-pills nav-stacked custom-nav">
                    @{if (ViewBag.iscadre == true)
                      {
                          
                        <li class=""><a href="/EnterFile/Index"><i class="fa fa-file"></i><span>我的档案</span></a></li>
                          
                      }
                    }
                    @{if (ViewBag.role == 2)
                      {                  
                        <li class=""><a href="/CheckFile/CheckUserIndex"><i class="fa fa-laptop"></i><span>审核档案</span></a> </li>
                      }}
                    @{if (ViewBag.role == 3 || ViewBag.role == 4)
                      {                  
                        <li class=""><a href="/CheckFile/Index"><i class="fa fa-check-square-o"></i><span>审核档案</span></a> </li>
                      }}


                    @{if (ViewBag.role == 3 || ViewBag.role == 4)
                      {
                        <li class="menu-list"><a href="#"><i class="fa fa-eye"></i><span>共享档案</span></a>
                            <ul class="sub-menu-list">
                                <li><a href="/ShareFile/ShareIndex">新增共享</a></li>
                                <li><a href="/ShareFile/ShareRecord">共享历史记录</a></li>
                            </ul>
                        </li>                 
                        <li class="menu-list"><a href="#"><i class="fa fa-users"></i><span>系统管理</span></a>
                            <ul class="sub-menu-list">
                                <li><a href="/SystemManage/UserManage">用户管理</a></li>
                                <li><a href="/SystemManage/WorkUnit">单位设置</a></li>
                                <li><a href="/SystemManage/BuildTime">建档时间管理</a></li>
                                <li><a href="/SystemManage/RoleManage">角色管理</a></li>
                            </ul>
                        </li>
                      }                       
                    }
                    @{if (ViewBag.role == 0)
                      {
                          <li class=""><a href="/ForeignShare/Index"><i class="fa fa-eye"></i><span>查看共享</span></a></li>
                      }
                        
                        }

                        @{if ((ViewBag.role == 1 || ViewBag.role == 2 || ViewBag.role == 3 || ViewBag.role == 4) && ViewBag.sharestatus == "是")
                          {
                          <li class=""><a href="/ForeignShare/Index"><i class="fa fa-eye"></i><span>查看共享</span></a></li>
                          }
                        
                        }

                    <li class=""><a href="/Home/LogOut"><i class="fa fa-sign-in"></i><span>退出登录</span></a></li>
                </ul>
                <!--sidebar nav end-->
            </div>
        </div>
        <!-- main content start-->
        <div class="main-content pd60">

            <div class="wrapper">
                @RenderBody()
            </div>
            <!--footer section start-->
            <footer class="sticky-footer">
                <center>科级干部廉政档案管理：机关党委231室   系统开发：易沙软件  客服电话：86871130</center>

            </footer>
            <!--footer section end-->
        </div>
        <!-- main content end-->
    </section>
</body>
