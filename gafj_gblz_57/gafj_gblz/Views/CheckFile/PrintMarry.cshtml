@{
    ViewBag.Title = "PrintMarry";
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link rel="stylesheet" href="~/Content/css/global.css" type="text/css"/>
<link rel="stylesheet" href="~/Content/css/print.css" type="text/css"/>
<title>婚姻变化打印页面</title>
</head>
<body>
<div class="menu">
   <input type="button" value="打印" id="print_btn" onclick="javascript: window.print();"/>
    <input type="button" value="关闭" onclick="window.history.go(-1);" />
</div>
<div class="print_bd lin_h45">
  <h1 class="font_2 t_center padd_t40" >科级干部婚姻变化情况报告表</h1>
  <div class="font_4"><span class="font_4sm fr">表四－3</span>填表单位（章）：</div>

          @{ 
             
            var userinfolist = ViewBag.userinfolist as List<Yisaa.DAL.DT_UserInfo>;
            var marrylist = ViewBag.marrylist as List<Yisaa.DAL.DT_MarryChange>;
            foreach (var total in (ViewBag.tlist as List<Yisaa.DAL.DT_Total>))
            {
                foreach (var user in userinfolist.Where(a => a.Id == total.UserInfoId))
                {

                    foreach (var p in marrylist.Where(a => a.Id == total.MarryChangeId))
                    {     

  <table class="tab_b01 font_4sm lin_h24 tb_h40" >
    <tr >
      <td class="t01" width="12%">姓  名 </td>
      <td width="18%" colspan="3" >@user.RealName</td>
      <td class="t01" width="15%">单 位 </td>
      <td colspan="3" >@user.WorkUnit</td>
      <td class="t01" width="15%">职 务 </td>
      <td width="15%">@user.Post</td>
    </tr>
    <tr >
      <td class="t01" colspan="4" >本人是否有婚姻变化情况 </td>
      <td colspan="6" >@p.IsMarryChange</td>
    </tr>
    <tr >
      <td class="t01">原配偶 </td>
      <td class="t01">姓  名 </td>
      <td colspan="3">@p.LastPartner</td>
      <td class="t01" width="15%">婚姻登记<br/>
        时    间 </td>
      <td >@p.LastRegisterTime</td>
      <td class="t01" width="15%" colspan="2" >婚姻结束<br/>
        时    间 </td>
      <td >@p.LastEndTime</td>
    </tr>
    <tr >
      <td class="t01" rowspan="2" >现配偶</td>
      <td class="t01">姓  名 </td>
      <td colspan="3">@p.NowPartner</td>
      <td class="t01" >政治面貌 </td>
      <td colspan="2" >@p.NowPolitical</td>
      <td class="t01" >婚姻登记<br/>
        时    间 </td>
      <td >@p.NowRegisterTime</td>
    </tr>
    <tr >
      <td class="t01">单  位 </td>
      <td colspan="6" >@p.NowUnit</td>
      <td class="t01" >职    务 </td>
      <td >@p.NowPost</td>
    </tr>
    <tr >
      <td class="t01 h480">
        其<br/>
        他<br/>
        需<br/>
        说<br/>
        明<br/>
        情<br/>
        况 </td>
      <td colspan="9" >@p.Other</td>
    </tr>
  </table>

                }
         }
            }
         }

  <div class="font_4">填表人签名：<u>　　　　　　　　　&nbsp;</u><span class="fr font_4">填表时间：<u>　　　　</u>年<u>　　</u>月<u>　　</u>日</span></div>
  <div class="font_5 lin_h20">说明：填写2000年1月以后发生变化的情况。</div>
</div>
</body>
</html>
