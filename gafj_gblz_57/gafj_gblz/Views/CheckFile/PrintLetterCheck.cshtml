@{
    ViewBag.Title = "PrintLetterCheck";
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link rel="stylesheet" href="~/Content/css/global.css" type="text/css"/>
<link rel="stylesheet" href="~/Content/css/print.css" type="text/css"/>
<title>科级干部信访核查情况登记表打印页面</title>
</head>
<body>
<div class="menu02">
    <input type="button" value="打印" id="print_btn" onclick="javascript: window.print();"/>
    <input type="button" value="关闭" onclick="window.history.go(-1);" />
</div>
<div class="print_bd lin_h45">
  <h1 class="font_2 t_center padd_t40" >科级干部信访核查情况登记表</h1>
  <div class="font_4"><span class="font_4sm fr">表六</span></div>
 
    
      @{              
            var userinfolist = ViewBag.userinfolist as List<Yisaa.DAL.DT_UserInfo>;
            var letter = ViewBag.letter as List<Yisaa.DAL.DT_PetitionLetter>;
            foreach (var total in (ViewBag.tlist as List<Yisaa.DAL.DT_Total>))
            {
                foreach (var user in userinfolist.Where(a => a.Id == total.UserInfoId))
                {

                    foreach (var p in letter.Where(a => a.Id == total.PetitionLetterId))
                    {    
   <table class="tab_b01 font_4sm lin_h24 tb_h48" >
    <tr >
      <td class="t01" width="15%">信访 <br />
        登记号 </td>
      <td width="20%">@p.RecordNum</td>
      <td class="t01" width="15%">信访时间 </td>
      <td width="15%">@p.LetterTime</td>
      <td class="t01" width="15%" colspan="2" >信息 <br />
        来源单位 </td>
      <td width="20%">@p.FromUnit</td>
    </tr>
    <tr >
      <td class="t01" rowspan="2" >被反映人 </td>
      <td class="t01" >姓 名 </td>
      <td >@p.ByManName</td>
      <td class="t01" >职 务 </td>
      <td colspan="3" >@p.ByManPost</td>
    </tr>
    <tr >
      <td class="t01" >单 位 </td>
      <td colspan="5" >@p.ByManUnit</td>
    </tr>
    <tr >
      <td class="t01" rowspan="2" >反映人 </td>
      <td class="t01">姓 名 </td>
      <td >@p.ManName</td>
      <td class="t01">联系 <br />
        方式 </td>
      <td colspan="3" >@p.ManTel</td>
    </tr>
    <tr >
      <td class="t01">单 位 </td>
      <td colspan="2" >@p.ManUnit</td>
      <td class="t01">职 务 </td>
      <td colspan="2" >@p.ManPost</td>
    </tr>
    <tr >
      <td class="t01">信访反映 <br />
        内容 </td>
      <td colspan="6" class="h90">@p.Content</td>
    </tr>
    <tr >
      <td class="t01">调查情况 <br />
        及结论 </td>
      <td colspan="6" class="h90">@p.SurveyResult</td>
    </tr>
    <tr >
      <td class="t01">处理结果 </td>
      <td colspan="6" class="h90">@p.HandleResult</td>
    </tr>
    <tr >
      <td class="t01">备注 </td>
      <td colspan="6" class="h90">@p.Remark</td>
    </tr>
  </table>
           }
         }
            }
         }
          
  <div class="font_4">填表单位（章）：<span class="fr font_4">填表时间：<u>　　　　</u>年<u>　　</u>月<u>　　</u>日</span></div>
   <div class="font_5 lin_h24">说明：1、此表格只登记经过调查核实的信访情况。<br/>
　　　2、表中“信访登记号”为信访受理单位或部门的信访件登记号。</div>
</div>
</body>
</html>
