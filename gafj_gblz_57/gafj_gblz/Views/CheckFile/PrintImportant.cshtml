@{
    ViewBag.Title = "PrintImportant";
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link rel="stylesheet" href="~/Content/css/global.css" type="text/css"/>
<link rel="stylesheet" href="~/Content/css/print.css" type="text/css"/>
<title>科级干部其他重大事项报告表打印页面</title>
</head>
<body>
<div class="menu02">
    <input type="button" value="打印" id="print_btn" onclick="javascript: window.print();"/>
    <input type="button" value="关闭" onclick="window.history.go(-1);" />
</div>
<div class="print_bd lin_h45">
  <h1 class="font_2 t_center padd_t40" >科级干部其他重大事项报告表</h1>
  <div class="font_4"><span class="font_4sm fr">表四－7</span>填表单位（章）：</div>

      @{              
            var userinfolist = ViewBag.userinfolist as List<Yisaa.DAL.DT_UserInfo>;
            var important = ViewBag.important as List<Yisaa.DAL.DT_Important>;
            foreach (var total in (ViewBag.tlist as List<Yisaa.DAL.DT_Total>))
            {
                foreach (var user in userinfolist.Where(a => a.Id == total.UserInfoId))
                {

                    foreach (var p in important.Where(a => a.Id == total.ImportantId))
                    {     
  <table class="tab_b01 font_4sm lin_h24 tb_h48" >
    <tr >
      <td class="t01" width="15%" >姓  名 </td>
      <td width="18%">@user.RealName</td>
      <td class="t01" width="15%" >单  位 </td>
      <td width="22%">@user.WorkUnit</td>
      <td class="t01" width="15%" >职 务 </td>
      <td width="15%">@user.Post</td>
    </tr>
    <tr >
      <td class="t01">
        报<br/>
        告<br/>
        事<br/>
        项 </td>
      <td colspan="5" class="h400">@p.Report</td>
    </tr>
	 <tr >
      <td class="t01">
        领导审阅<br/>
        或<br/>
        组织答复</td>
      <td colspan="5" class="h120"><div class="br_date"> （章） <br />
                                年   月   日 </div></td>
    </tr>
    <tr >
      <td class="t01">备  注 </td>
      <td colspan="5" class="h90">@p.Remark</td>
    </tr>
  </table>
                   }
         }
            }
         }

  <div class="font_4">填表人签名：<u>　　　　　　　　　&nbsp;</u><span class="fr font_4">填表时间：<u>　　　　</u>年<u>　　</u>月<u>　　</u>日</span></div>
  <div class="font_5 lin_h24">说明：1、本表填写《关于领导干部报告个人有关事项的规定》中需要向组织报告的本人及其家庭成员的其他重大事项、本人认为应当向组织报告的其他事项。<br/>
　　　2、填写从2015年1月以后发生的情况。</div>
</div>
</body>
</html>
